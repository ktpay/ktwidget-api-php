{
    "name": "ktpay/ktwidget-api-php",
    "description": "PHP client for ktwidget",
    "homepage": "https://widget.nplus.tech",
    "support": {
        "issues": "https://github.com/ktpay/ktwidget-api-php/issues",
        "source": "https://github.com/ktpay/ktwidget-api-php"
    },
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yevgeniy Korsukov",
            "email": "nickarsar@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "ext-json": "*",
        "ext-sodium": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpunit/php-code-coverage": "^7.0",
        "squizlabs/php_codesniffer": "*",
        "symfony/var-dumper": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "KTWidget\\Merchant\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "tests": [
            "./vendor/bin/phpunit"
        ]
    }
}
