{
    "name": "ktpay/ktwidget-sdk-php",
    "description": "PHP client for ktwidget",
    "homepage": "https://ktpay.kz",
    "support": {
        "issues": "https://github.com/ktpay/ktwidget-sdk-php/issues",
        "source": "https://github.com/ktpay/ktwidget-sdk-php"
    },
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yevgeniy Korsukov",
            "email": "nickarsar@gmail.com"
        }
    ],
    "require": {
